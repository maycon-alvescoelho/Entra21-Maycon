let vetor = [], quantidadePares = 0
for (let i = 0; i < 10; i++) {
    vetor[i] = +prompt("Digite um número")

    if (vetor[i] % 2 === 0) {
        quantidadePares++
    }
}

console.log(`Quantidade de números pares: ${quantidadePares}`)

2) 
let vetor = [],
    maior,
    posicao = 0

for (let i = 0; i < 5; i++) {
    vetor[i] = +prompt(`Digite o ${i + 1} valor do vetor`)
    if (i === 0) {
        maior = vetor[i]
    } else if (vetor[i] > maior) {
        maior = vetor[i]
        posicao = i
    }
}
console.log(`Vetor: ${vetor}\nMaior valor: ${maior}\nPosição no vetor: ${posicao}`)

3)
let vetor = [],
    maior = 0,
    menor = 0

for (let i = 0; i < 5; i++) {
    vetor[i] = +prompt(`Digite o ${i + 1} valor do vetor`)
    if (i === 0) {
        maior = vetor[i]
        menor = vetor[i]
    } else if (vetor[i] > maior) {
        maior = vetor[i]
    } else if (vetor[i] < menor) {
        menor = vetor[i]
    }
}
console.log(`Vetor: ${vetor}\nMaior valor: ${maior}\nMenor valor: ${menor}`)

4) 
let vetor = [],
    vetorInverso = []

for (let i = 0; i < 5; i++) {
    vetor[i] = +prompt(`Digite o ${i + 1} valor do vetor`)
    vetorInverso [4 - i] = vetor[i]

}
console.log(`Vetor: ${vetor}\nVetor inverso: ${vetorInverso}`)

5) 
let nomes = [] 
for (let i = 0; i < 5; i++) {
    nomes[i] = prompt("Digite um nome")
}

let nomeProcurado = prompt("Digite o nome desejado")

let achou
for (let i = 0; i < 5; i++) {
    if (nomes[i] === nomeProcurado) {
        console.log("Achei!")
        achou = true
        break
    } 
}

console.log(`Nomes: ${nomes}`)
if (!achou) console.log("Não achei!")

