vetorA [4] = 100

for (let i = 0, tamanhoVetor = vetorA.length; i < tamanhoVetor; i++) {
    console.log(vetorA[i])
} 

7)
let numeros = [],
    numerosQuadrado = []

for (let i = 0; i < 5; i++) {
    numeros[i] = prompt("Digite um número")
    numerosQuadrado[i] = numeros[i] ** 2 
} 

console.log(`Original: ${numeros}\nNumeros quadrados: ${numerosQuadrado}`)

