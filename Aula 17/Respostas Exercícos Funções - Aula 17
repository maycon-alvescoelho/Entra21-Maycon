let vetorIdade = [];
for (let i = 0; i < 3; i++){
    vetorIdade[i] = +prompt("Informe primeiro o ano, em seguida os meses e os dias");
}
function idadeDias(vetorIdade){
    let idade = 0;
    idade += vetorIdade[0] * 365;
    idade += vetorIdade[1] * 30;
    idade += vetorIdade[2];
    
    return idade;
}
console.log(idadeDias(vetorIdade));

14)
function checkDivisor(num){
let divisores = [];
for (let i = num; i > 0; i--){
    if(num % i === 0){
        divisores.push(i);
    }
}
return divisores;
}
let numero = 0;
for (let i = 1; i > 0; i++){
numero = +prompt("Informe um número");
if (numero > 0 && Number.isInteger(numero)){
    break;
}
console.log("Informe um valor válido");
}
console.log(checkDivisor(numero));

15) 
let numero = 0;
for (let i = 1; i > 0; i++){
    numero = +prompt("Informe um número");
    if (numero > 0 && Number.isInteger(numero)){
        break;
    }
    console.log("Informe um valor válido");
}
function fatorial(num){
    let resultado = num;
    for (let i = num; i > 1; i--){
        resultado *= i - 1;
    }
    return resultado;
}
console.log(fatorial(numero));

16) 
function checkPerfeito(num){
let final = 0;
for (let i = num; i > 0; i--){
    if(num % i === 0){
        final += i;
    }
}
if (num === (final - num)){
    return true;
}
return false;
}

let numero = +prompt("Informe um numero");
console.log(checkPerfeito(numero));

