12)
let vetor = []; 
let maior = 0;
let menor = 1000;
for (let i = 0; i < 50; i++){
    vetor[i] = Math.floor(Math.random() * (1000 - 1)) + 1;
}
function maiorMenor(vetor){

    for (let i = 0; i < 50; i++){
        if (vetor[i] > maior){
            maior = vetor[i];
        } else if (vetor[i] < menor){
            menor = vetor[i];
        }
    }
}
maiorMenor(vetor);
console.log(maior, menor);

