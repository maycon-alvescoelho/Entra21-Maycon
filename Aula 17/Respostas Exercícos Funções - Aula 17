function conceito(media){
    let resultado 

    if (media < 0 || media > 10){
        resultado = "Média inválida"
    } else if (media < 5){
        resultado "D"
    } else if (media < 7){
        resultado "C";
    } else if (media < 9){
        resultado "B";
    } else if (média < 10) {
        resultado "A"
    }
console.log(conceito(media));

