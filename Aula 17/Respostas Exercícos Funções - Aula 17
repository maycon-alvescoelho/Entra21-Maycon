let vetor = [],
vetorInverso = [];
for (let i = 0; i < 50; i++){
vetor[i] = Math.floor(Math.random() * (10 - 1)) + 1;
}
function ordenar(numeros){
numeros.sort();
return numeros;
}
ordenar(vetor);
for (let i = 0; i < 50; i++) {
vetorInverso[49 - i] = vetor[i]            
}
console.log(vetorInverso);

18)
let valores = [];
for (let i = 0; i < 3; i++){
    valores[i] = +prompt(`Informe o ${i + 1}º parâmetro`);
}
function bhaskara(parametros){
    let delta = (parametros[1] ** 2 - 4 * parametros[0] * parametros[2]),
        raizes = [];

    if (delta < 0){
        return "Cálculo impossível";
    }
    
    raizes.push((-parametros[1] + Math.sqrt(delta)) / 2 * parametros[0]);
    raizes.push((-parametros[1] - Math.sqrt(delta)) / 2 * parametros[0]);
    
    return raizes;
}

console.log(bhaskara(valores));

19)
let vetor = [];
for (let i = 0; i < 50; i++){
    vetor[i] = Math.floor(Math.random() * (10 - 1)) + 1;
}
function paresPares(vetor){
    let pares2x = [];
    for(let i = 0; i < 50; i++){
        if((vetor[i] % 2 === 0) && (i % 2 === 0)){
            pares2x.push(vetor[i]);
        }
    }
    return pares2x;
}
console.log(paresPares(vetor));
20)
let numero = +prompt("Informe um numero");
function sortear(num){
    let sorteado = Math.floor(Math.random() * (10 - 1)) + 1;
    if(sorteado == num){
        return `Parabéns! O número sorteado foi o ${sorteado}`;
    }
    return `Que pena! O número sorteado foi o ${sorteado}`; 
}
console.log(sortear(numero));

